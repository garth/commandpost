<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
        data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'index' class="navbar-brand"}}
        <i class="fa fa-tasks fa-rotate-90"></i> Command Post
      {{/link-to}}
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        {{#if App.isSignedIn}}
          <li>
            {{#link-to 'boards'}}
              <i class="fa fa-bar-chart-o fa-rotate-180"></i> Boards
            {{/link-to}}
          </li>
          {{#if App.user.isAdmin}}
            <li>
              {{#link-to 'users'}}
                <i class="fa fa-users"></i> Users
              {{/link-to}}
            </li>
          {{/if}}
        {{else}}
          <li>{{#link-to 'signup'}}<i class="fa fa-edit"></i> Sign up{{/link-to}}</li>
        {{/if}}
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {{#if App.isSignedIn}}
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>
              {{App.user.name}} <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>{{#link-to 'profile'}}<i class="fa fa-user"></i> Profile{{/link-to}}</li>
              <li class="divider"></li>
              <li><a {{action 'signout'}}><i class="fa fa-sign-out"></i> Sign out</a></li>
            </ul>
          </li>
        {{else}}
          <li>{{#link-to 'signin'}}<i class="fa fa-sign-in"></i> Sign in{{/link-to}}</li>
        {{/if}}
      </ul>
    </div>
  </div>
</div>

{{outlet}}

