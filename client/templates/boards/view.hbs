<h1>{{name}} Board</h1>
{{#link-to 'boards.edit' content}}Edit{{/link-to}}
<div class="board-lanes">
  {{#each lane in sortedLanes}}
    <div class="board-lane" {{bind-attr style="laneStyle"}}>
      <div class="panel panel-default">
        <div class="panel-heading">{{lane.name}}</div>
        <div class="panel-body">
          {{lane.name}} content
        </div>
      </div>
    </div>
  {{/each}}
</div>
