<div class="container">
  <h1><i class="fa fa-users"></i> Users</h1>
  <table class="table table-striped">
    <thead><tr><th>Name</th><th>Initials</th><th>Login</th><th>Role</th><th></th></tr></thead>
    <tbody>
      {{#each}}
        <tr>
          <td>{{name}}</td>
          <td>{{initials}}</td>
          <td>{{login}}</td>
          <td>
            {{#if isCurrent}}
              {{role}}
            {{else}}
              {{view Ember.Select content=roles value=role}}
            {{/if}}
          </td>
          <td>{{#link-to 'password-reset' .}}Password Reset{{/link-to}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
